{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@db/*": ["./db/*"],
      "@features/*": ["./features/*"],
      "@listeners/*": ["./listeners/*"],
      "@resources/*": ["./resources/*"],
      "@shared/*": ["./shared/*"]
    },
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["./node_modules"]
}
