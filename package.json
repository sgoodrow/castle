{
  "name": "castle-bot",
  "version": "1.0.0",
  "description": "Discord bot for Castle's Guild (an EverQuest guild).",
  "repository": "git@github.com:sgoodrow/castle.git",
  "license": "MIT",
  "author": "Scott Goodrow <sgoodrow@gmail.com>",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "docker-compose down && rimraf postgres-db",
    "deploy": "git push heroku-test main",
    "predev": "docker-compose up -d --wait",
    "dev": "nodemon",
    "format": "prettier --write ./src",
    "lint": "eslint ./src --fix --max-warnings 0",
    "prepare": "husky install",
    "release": "git push heroku-prod main",
    "start": "ts-node .",
    "test": "jest --watch",
    "test:ci": "jest"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "devDependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^17.0.25",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "discord-api-types": "^0.31.1",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.2",
    "moment-timezone": "^0.5.34",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "prettier": "^2.6.2",
    "prettier-eslint": "^14.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typeorm": "^0.3.6",
    "typescript": "^4.6.3"
  }
}
